<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/TextAppearance.MaterialComponents.Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ground"
    android:foregroundTint="#F6F0F0"
    android:padding="7dp"
    android:rotationX="0">


    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fontdiner_swanky"
        android:text="Challenge Me"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="3dp"
        android:alpha="0.2"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/u" />

    <TextView
        android:id="@+id/tvSelectActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Select challenge activity"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/llCheckBoxList"
        android:layout_width="422dp"
        android:layout_height="425dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        tools:ignore="ExtraText">


        <CheckBox
            android:id="@+id/cbSwimming"
            style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="0.5"
            android:background="@android:color/holo_orange_light"
            android:buttonTint="#0E0E0E"
            android:drawableRight="@drawable/baseline_pool_24"
            android:fontFamily="casual"
            android:paddingEnd="16dp"
            android:text="Swimming"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cycling"
            style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="0.5"
            android:background="@android:color/holo_orange_dark"
            android:buttonTint="#0E0E0E"
            android:drawableRight="@drawable/baseline_directions_bike_24"
            android:fontFamily="casual"
            android:paddingEnd="16dp"
            android:text="cycling"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/hiking"
            style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="0.6"
            android:background="@android:color/holo_red_light"
            android:buttonTint="#0E0E0E"
            android:drawableRight="@drawable/baseline_hiking_24"
            android:fontFamily="casual"
            android:paddingEnd="16dp"
            android:text="Hiking"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/Running"
            style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="0.9"
            android:background="?attr/colorOnTertiaryFixedVariant"
            android:buttonTint="#0E0E0E"
            android:drawableRight="@drawable/baseline_directions_run_24"
            android:fontFamily="casual"
            android:paddingEnd="16dp"
            android:text="Running"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" /><![CDATA[

        />

        ]]>

        <CheckBox
            android:id="@+id/TeamSports"
            style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="0.9"
            android:background="@color/checkbox_checked"
            android:buttonTint="#0E0E0E"
            android:drawableRight="@drawable/baseline_people_24"
            android:fontFamily="casual"
            android:paddingEnd="16dp"
            android:text="Team Sports"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/CrossFit"
            style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="0.9"
            android:background="@color/material_dynamic_tertiary50"
            android:buttonTint="#0E0E0E"
            android:drawableRight="@drawable/baseline_downhill_skiing_24"
            android:fontFamily="casual"
            android:paddingEnd="16dp"
            android:text="@string/cross_fit"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/any"
            style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="0.9"
            android:background="?attr/colorOnTertiaryFixedVariant"
            android:buttonTint="#0E0E0E"
            android:drawableRight="@drawable/baseline_accessibility_24"
            android:fontFamily="casual"
            android:paddingEnd="16dp"
            android:text="Any"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:orientation="horizontal"
        android:gravity="center">

    <Button
        android:id="@+id/cancel_button2"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="2"
        android:backgroundTint="#9AFF8A80"
        android:text="Cancel"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/ok_button2"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_marginStart="9dp"
            android:layout_weight="2"
            android:backgroundTint="#9C78E67C"
            android:fontFamily="casual"
            android:text="Ok"
            android:textSize="20sp"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark" />
</LinearLayout>
</RelativeLayout>